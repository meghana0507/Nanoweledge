<h1>Do you need more tutorials?</h1>
<h1>Tell us more.</h1>
<hr/>

<%= link_to 'New Request', new_request_path, :class => "btn btn-lg btn-default" %>
<p>&nbsp;</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-left">Title</th>
      <th class="text-center">Topic</th>
      <th class="text-center">User</th>
      <th colspan="3" class="text-center">Your Action</th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr class="text-center" >
        <td class="text-left"><%= request.title %></td>
        <td><%= request.topic.name %></td>
        <td><%= request.user.user_name %></td>
        <% if current_user && current_user.id == request.user_id %>
          <td><%= link_to 'Show', request %></td>
          <td><%= link_to 'Edit', edit_request_path(request) %></td>
          <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

