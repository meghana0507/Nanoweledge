<p id="notice"><%= notice %></p>

<div class="row">
            <div class="col-lg-12">
              <h1 class="page-header">Listing Topics
                    
                </h1>
            </div>
        </div>

<!-- <%= url_for :controller => 'tutorials', :action => 'myindex' %> -->
 <div class="col-md-12"> 
<div class="well">
<table style="margin-left:30px">
  <thead>
    <tr>
      <th style="padding-right:20px"><h1 class="page-header"><small> Name</small></h1></th>
      <th style="padding-right:20px"><h1 class="page-header"><small> Category</small></h1></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td style="padding-right:20px;text-align:left"><%= link_to topic.name,topic %>(<%=topic.tutorials.count%> tutorials)</td>
        <td style="padding-right:20px; text-align:center"><%= link_to topic.category.name, topic.category %></td>
        
    <%if current_user && current_user.user_name=='admin'%>
        <td style="padding-right:20px"><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td style="padding-right:20px"><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
     <% end %>
  </tbody>
</table>

</div>

 

