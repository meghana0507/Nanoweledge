	<%if @tutorials.count>0%>
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                 My Tutorials
                </h1>
            </div>
        </div>
        <!-- /.row -->
        

        <div class="row">

                <div class="col-md-8">
                <!-- My Tutorials Well -->
                <div class="well">
                    <h4>List of Tutorials</h4>
                    <%@tutorials.each do |tutorial|%>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="list-unstyled">
                                <li><span><%=link_to tutorial.title, tutorial%></span><span>&nbsp;(<%=tutorial.topic.category.name%>:<%=tutorial.topic.name%>)</span><span><%= link_to ' Edit ', edit_tutorial_path(tutorial) %><%= link_to ' Destroy ', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></span>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                    <%end%>
                </div>

            </div>

            <%else%>
			<p>You haven't created any tutorials. <%=link_to 'Create here', new_tutorial_path %><p>


        </div>
        <!-- /.row -->
  <%end%>
