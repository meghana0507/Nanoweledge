<div class="row">
            <div class="col-lg-12">
              <h1 class="page-header">Listing Tutorials
                    
                </h1>
            </div>
        </div>

<!-- <%= url_for :controller => 'tutorials', :action => 'myindex' %> -->
 <div class="col-md-12"> 
<div class="well">
<table style="margin-left:30px">
  <thead>
    <tr>
      <th style="padding-right:20px"><h1 class="page-header"><small> Title</small></h1></th>
      <th style="padding-right:20px"><h1 class="page-header"><small> Tutorial level</small></h1></th>
      <th style="padding-right:20px"><h1 class="page-header"><small> User</small></h1></th>
      <th style="padding-right:20px"><h1 class="page-header"><small> Topic</small></h1></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td style="padding-right:20px; text-align:left"><%= link_to tutorial.title, tutorial %></td>
		
        <td style="padding-right:20px;text-align:center"><%= tutorial.tutorial_level %></td>
        <td style="padding-right:20px; text-align:center"><%= link_to tutorial.user.user_name, tutorial.user %></td>
        <td style="padding-right:20px; text-align:center"><%= link_to tutorial.topic.name, tutorial.topic %></td>
      	
        <%if current_user && current_user.user_name=='admin'%>
          <td style="padding-right:20px"><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
          <td style="padding-right:20px"><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
