<p id="notice"><%= notice %></p>

<h1>Listing Steps</h1>

<table>
  <thead>
    <tr>
      <th>S no</th>
      <th>Description</th>
      <th>Tutorial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.s_no %></td>
        <td><%= step.description %></td>
        <td><%= step.tutorial_id %></td>
        <td><%= link_to 'Show', step %></td>
		<%if current_user && current_user.user_name=='admin'%>
        <td><%= link_to 'Edit', edit_step_path(step) %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
	<%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_step_path %>
