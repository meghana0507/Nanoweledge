<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
	                <small><%= link_to 'Home', categories_path %> > <%=@category.name%>
					</small></br>
            <!-- <small>Name:</small><small><%= @category.name %></small>  -->
            <small colspan="3"></small>
        </h1>
    </div>
</div>

<div class="row">
  <div class="col-md-8">
    <!-- Topics List  Well -->
    <div class="well">
      <h4>List of Topics</h4>
      <% @topics.each do |topic| %>
        <div class="row">
          <div class="col-md-12">
            <ul class="list-unstyled">
              <li>
                <%= link_to topic.name,topic %>&nbsp;(<%=topic.tutorials.count%> tutorials)
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <%if current_user && current_user.user_name=='admin'%>
        <%= link_to 'Edit', edit_category_path(@category), class:'btn btn-lg btn-default btn-block', type:'submit' %>
        <%= link_to 'Back', categories_path, class:'btn btn-lg btn-default btn-block', type:'submit' %>
      <%end%>
    </div>
  </div>

  <div class="col-md-4">
    <br/>
    <%if current_user && current_user.user_name=='admin'%>
      <%= link_to 'New Category', new_category_path, class:'btn btn-lg btn-default btn-block', type:'submit', value:'New Category' %>
    <%end%>
    <br/>
    <%if current_user && current_user.user_name=='admin'%>
      <%= link_to 'New Topic', new_topic_path, class:'btn btn-lg btn-default btn-block', type:'submit', value:'New Topic' %>
    <%end%>
  </div>
</div>
